# Binary files (LFS) - perfect, keep this
*.glb filter=lfs diff=lfs merge=lfs -text
*.tif filter=lfs diff=lfs merge=lfs -text
*.png filter=lfs diff=lfs merge=lfs -text
*.dae filter=lfs diff=lfs merge=lfs -text
*.jpg filter=lfs diff=lfs merge=lfs -text
*.tga filter=lfs diff=lfs merge=lfs -text
*.fbx filter=lfs diff=lfs merge=lfs -text
*.blend filter=lfs diff=lfs merge=lfs -text
*.gltf filter=lfs diff=lfs merge=lfs -text
*.pak filter=lfs diff=lfs merge=lfs -text

# Auto-detect text files and normalize line endings
* text=auto

# Source code - NO linguist-language=C++, let it auto-detect
*.c     text diff=cpp
*.cc    text diff=cpp
*.cxx   text diff=cpp
*.cpp   text diff=cpp
*.cpi   text diff=cpp
*.c++   text diff=cpp
*.hpp   text diff=cpp
*.h     text diff=cpp
*.h++   text diff=cpp
*.hh    text diff=cpp

# Build / config - perfect
*.cmake text diff=cmake linguist-detectable=false
*.json  text diff=json linguist-detectable=false
*.txt   text diff=text linguist-detectable=false
Makefile text diff=makefile linguist-detectable=false

# Shaders - perfect (force GLSL)
*.vert text diff=glsl linguist-language=GLSL
*.frag text diff=glsl linguist-language=GLSL
*.comp text diff=glsl linguist-language=GLSL
*.glsl text diff=glsl linguist-language=GLSL

# SPIR-V binaries - perfect
*.spv binary

# Exclude ALL LFS assets from language stats
*.glb linguist-generated=true
*.tif linguist-generated=true
*.png linguist-generated=true
*.dae linguist-generated=true
*.jpg linguist-generated=true
*.tga linguist-generated=true
*.fbx linguist-generated=true
*.blend linguist-generated=true
*.gltf linguist-generated=true
*.pak linguist-generated=true
*.spv linguist-generated=true
