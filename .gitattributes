# Auto-detect text files and normalize line endings
* text=auto
# Source code
*.c     text diff=cpp linguist-language=C++
*.cc    text diff=cpp linguist-language=C++
*.cxx   text diff=cpp linguist-language=C++
*.cpp   text diff=cpp linguist-language=C++
*.cpi   text diff=cpp linguist-language=C++
*.c++   text diff=cpp linguist-language=C++
*.hpp   text diff=cpp linguist-language=C++
*.h     text diff=cpp linguist-language=C++
*.h++   text diff=cpp linguist-language=C++
*.hh    text diff=cpp linguist-language=C++

# Build / config
*.cmake text diff=cmake linguist-language=C++
*.json  text diff=json linguist-language=C++
*.txt   text diff=text linguist-language=C++
Makefile text diff=makefile linguist-language=C++

# Shaders
*.vert text diff=glsl linguist-language=GLSL
*.frag text diff=glsl linguist-language=GLSL
*.comp text diff=glsl linguist-language=GLSL
*.glsl text diff=glsl linguist-language=GLSL

# SPIR-V binaries
*.spv binary
*.glb filter=lfs diff=lfs merge=lfs -text
*.tif filter=lfs diff=lfs merge=lfs -text
*.png filter=lfs diff=lfs merge=lfs -text
*.dae filter=lfs diff=lfs merge=lfs -text
*.jpg filter=lfs diff=lfs merge=lfs -text
*.tga filter=lfs diff=lfs merge=lfs -text
*.fbx filter=lfs diff=lfs merge=lfs -text
*.blend filter=lfs diff=lfs merge=lfs -text
*.gltf filter=lfs diff=lfs merge=lfs -text
